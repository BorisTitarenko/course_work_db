@model TicketRoutePointTransactionViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PassengerId" class="control-label"></label>
                <select asp-for="PassengerId" class="form-control" asp-items="ViewBag.PassengerId"></select>
            </div>
            <div class="form-group">

            </div>
            <div class="form-group">
                <input asp-for="DepartureDate" type="date" , class="form-control" id="departure_date" onchange="updateTrips()" />
                <span asp-validation-for="DepartureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TripId" class="control-label"></label>
                <select asp-for="TripId" id="trip_id" class="form-control" onchange="updateRoutePoints()"></select>
                <span asp-validation-for="TripId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RPId" class="control-label"></label>
                <select asp-for="RPId" class="form-control" id="rp_id" onchange="getSeatRange()"></select>
                <span asp-validation-for="RPId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seat" class="control-label"></label>
                <input asp-for="Seat" class="form-control" id="seat" min="0" max="0" />
                <span asp-validation-for="Seat" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">До сплати</label>
                <input readonly class="form-control" id="price"/>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>




