@model IEnumerable<Bus>

@{
    ViewData["Title"] = "Автобуси";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Додати</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Модель
            </th>
            <th>
                Сидячих
            </th>
            <th>
                Клімат контроль
            </th>
            <th>
                Перевізник
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BusModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SitingNumber)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.ClimateControl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cc.CcName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BusId">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.BusId">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.BusId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
