@model cource_work.Models.Entity.CarrierCompany


<h1>Додати перевізника</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Назва</label>
                <input asp-for="CcName" class="form-control" />
                <span asp-validation-for="CcName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Адреса</label>
                <input asp-for="OfficeAdress" class="form-control" />
                <span asp-validation-for="OfficeAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Власник</label>
                <input asp-for="CcOwner" class="form-control" />
                <span asp-validation-for="CcOwner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Контактний номер</label>
                <input asp-for="CcPhone" class="form-control" />
                <span asp-validation-for="CcPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

