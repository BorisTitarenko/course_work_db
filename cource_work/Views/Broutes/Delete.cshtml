@model cource_work.Models.Entity.Broute

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити маршрут</h1>

<h3></h3>
<div>
    <h4>Видалити маршрут</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Початкова тока
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartPoint)
        </dd>
        <dt class = "col-sm-2">
            Кінцева точка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndPoint)
        </dd>
        <dt class = "col-sm-2">
            Довжина маршруту
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RouteLength)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RouteId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися до списку</a>
    </form>
</div>
