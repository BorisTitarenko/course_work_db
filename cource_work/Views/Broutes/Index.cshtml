@model IEnumerable<cource_work.Models.Entity.Broute>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Початкова точка
            </th>
            <th>
                Кінцева точка
            </th>
            <th>
                Довжина маршруту
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartPoint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndPoint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RouteLength)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RouteId">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.RouteId">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.RouteId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
