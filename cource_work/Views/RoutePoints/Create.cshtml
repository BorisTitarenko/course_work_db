@model RoutePointViewModel


<h1>Додати зупинку</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Маршрут</label>
                @Html.DropDownListFor(m => m.RouteId, (SelectList)ViewBag.Routes, "--Select Process--", new { @id = "route_id", @onchange = "getJourneys()", @class="form-control"})
                <span asp-validation-for="RouteId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Рейс</label>
                <select asp-for="JourneyId" id="journey_id" onchange="enableInputs()" class="form-control"></select>
                <span asp-validation-for="JourneyId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Ціна квитка</label>
                <input disabled asp-for="TicketPrice" id="price" class="form-control" />
                <span asp-validation-for="TicketPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Час прибуття</label>
                <input disabled asp-for="ArrivalTime" type="time" id="arrivalTime" class="form-control" />
                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Місто</label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Зупинка</label>
                <input asp-for="StopName" class="form-control" />
                <span asp-validation-for="StopName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Список</a>
</div>

