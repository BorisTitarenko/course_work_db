@model IEnumerable<cource_work.Models.Entity.RoutePoint>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StopName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StopName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RpId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RpId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RpId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
