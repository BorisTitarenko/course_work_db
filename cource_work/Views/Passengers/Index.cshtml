@model IEnumerable<cource_work.Models.Entity.Passenger>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PassengerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassengerAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preferential)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
